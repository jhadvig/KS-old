!!!
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    = favicon_link_tag 'favicon.png'
    %title Katello-Scholar
    = stylesheet_link_tag "katello-scholar"
    = stylesheet_link_tag "bootstrap"
    = stylesheet_link_tag "bootstrap-responsive"
    / = javascript_include_tag :all
    = javascript_include_tag "jquery-1.8.3"
    = javascript_include_tag "bootstrap"
    = javascript_include_tag "application"
    = csrf_meta_tag

  %body

    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid.header-container
          = link_to dashboard_path, :class=>"brand" do
            = image_tag "katello-scholar-icon-white.png"
            Katello-Scholar

          %ul.nav.header

            %li{:class=> ("active" if params[:controller] == 'dashboard')}
              = link_to _("Dashboard"), dashboard_path
            %li{:class=> ("active" if params[:controller] == 'courses')}
              = link_to _("Courses"), courses_path
            %li{:class=> ("active" if params[:controller] == 'templates')}
              = link_to _("Templates"), templates_path
            %li{:class=> ("active" if params[:controller] == 'systems')}
              = link_to _("Systems"), systems_path


          .btn-group.pull-right.settings
            %a.btn.btn-primary.dropdown-toggle.user-button{"data-toggle"=>"dropdown", :href =>"#{}"}
              Username
              %span.caret
            %ul.dropdown-menu
              %li
                %a{:href=>"#"} Settings
              %li
                %a{:href=>root_path} #{_('Log Out')}

          .btn-group.pull-right.notification
            =link_to dashboard_path, :class=>"badge badge-info" do
              128
              
              



          


    .container
      .row
        .span12
          .well.well-large

            = yield 

    %footer.modal-footer.navbar.navbar-fixed-bottom
      %center
        %span.muted.credit #{_('Katello-Scholar powered by')}
        = link_to "http://www.katello.org/", "http://www.katello.org/"
    / = yield :javascripts_block
    / = yield :extra